{
  "compilerOptions": {
    "baseUrl" : "src",
    "paths": {
      "@components/*": ["src/components/*"],
      "@config/*": ["src/config/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@store/*": ["src/store/*"],
      "@pages/*": ["src/App/pages/*"],
      "@models/*": ["src/models/*"],
      "@shared/*": ["src/shared/*"]
    },
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
